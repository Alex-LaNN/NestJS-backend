{
  "version": "0.2.0",
  "configurations": [
     {
       "type": "node",
       "request": "launch",
       "name": "Debug TypeScript",
       "runtimeArgs": ["-r", "ts-node/register"],
       "args": ["${workspaceFolder}/src/index.ts"],
       "env": {
         "TS_NODE_FILES": "true",
         "TS_NODE_TRANSPILE_ONLY": "true"
       },
       "sourceMaps": true,
       "cwd": "${workspaceFolder}",
     }
  ]
}